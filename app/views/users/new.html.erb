<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
    <div>
        <%= form_for(User.new) do |f| %>
            <%= render 'shared/error_messages' %>

            <%= f.label :firstname %>
            <%= f.text_field :firstname %>

            <%= f.label :secondname %>
            <%= f.text_field :secondname %>

            <%= f.label :patronymic %>
            <%= f.text_field :patronymic %>

            <%= f.label :dateofbirth %>
            <%= f.date_select :dateofbirth, start_year: 1933, end_year: 2006 %>

            <%= f.label :login %>
            <%= f.text_field :login %>

            <%= f.label :email %>
            <%= f.text_field :email %>

            <%= f.label :password %>
            <%= f.password_field :password %>

            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation %>

            <%= f.submit "Create my account" %>
        <% end %>
    </div>
</div>